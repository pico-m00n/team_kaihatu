<div class='container'>

    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <table class="table table-borderless">
        <tbody>
          <tr>
           <td><%= f.label :名前 %></td>
           <td>(姓)<%= f.text_field :name_family, placeholder: "令和" %></td>
           <td>(名) <%= f.text_field :name_first %></td>
         </tr>

          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>(セイ)<%= f.text_field :name_kana_family %></td>
            <td>(メイ) <%= f.text_field :name_kana_first %></td>
          </tr>

          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :郵便番号 %>(ハイフンなし)</td>
            <td><%= f.number_field :post_code %></td>
          </tr>

          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address %></td>
          </tr>

          <tr>
            <td><%= f.label :電話番号 %>(ハイフンなし）</td>
            <td><%= f.number_field :phone_number %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em></td>
            <% end %>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード %>(確認用)</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

       </tbody>
      </table>

      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>

    <h2>既に登録済みの方</h2>
    <%= link_to "こちら", "sign_in"  %>からログインしてください。

</div>