<div class='container'>
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

<div class="form-group row">
           <%= f.label :名前, class: "col-2" %>
           <div class="col-1">（姓）</div>
           <%= f.text_field :name_family, placeholder: "令和", autofocus: true %>
           <div class="col-1">（名）</div>
           <%= f.text_field :name_first %>
          </div>


          <div class="form-group row">
            <%= f.label :フリガナ, class: "col-2" %>
            <div class="col-1">（セイ）</div>
            <%= f.text_field :name_kana_family %>
            <div class="col-1">（メイ）</div>
            <%= f.text_field :name_kana_first %>
          </div>
          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-3" %>
            <%= f.email_field :email, autocomplete: "email" %>
          </div>

          <div class="form-group row">
            <%= f.label :郵便番号, class: "col-3" %>
            <%= f.number_field :post_code %>
          </div>

           <div class="form-group row">
            <%= f.label :住所, class: "col-3" %>
            <%= f.text_field :address, class: "col-8" %>
          </div>

          <div class="form-group row">
            <%= f.label :電話番号, class: "col-3" %>
            <%= f.number_field :phone_number %>
          </div>

          <div class="form-group row">
            <div class="col-3">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

           <div class="form-group row">
            <%= f.label :パスワード, class: "col-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>


      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
    <br><br>
    <h4>既に登録済みの方</h4>
    <%= link_to "こちら", "sign_in"  %>からログインしてください。

</div>