<div class="container">

  <h1>マイページ</h1>
  <p></p>

  <div class='row'>
   <div class="col-1"><strong>登録情報</strong></div>
   <div class="col-3"><%= link_to '編集する', edit_customers_path, class: 'btn btn-success' %></div>
  </div>
  <p></p>

  <table class='table table-bordered'>
    <tr>
  	  <th>氏名</th>
  	  <th><%= current_customer.name_family %>　<%= current_customer.name_first %></th>
    </tr>
    <tr>
  	  <th>カナ</th>
  	  <th><%= current_customer.name_kana_family %>　<%= current_customer.name_kana_first %></th>
    </tr>
    <tr>
  	  <th>郵便番号</th>
  	  <th><%= current_customer.post_code %></th>
    </tr>
    <tr>
  	  <th>住所</th>
  	  <th><%= current_customer.address %></th>
    </tr>
    <tr>
  	  <th>電話番号</th>
  	  <th><%= current_customer.phone_number %></th>
    </tr>
    <tr>
  	  <th>メールアドレス</th>
  	  <th><%= current_customer.email %></th>
    </tr>
  </table>

  <div class='row'>
    <div class="col-1"><strong>配送先</strong></div>
    <div class="col-3"><%= link_to '一覧を見る', shipping_addresses_path, class: 'btn btn-primary' %></div>
  </div>
  <p></p>
  <div class="row">
    <div class="col-1"><strong>注文履歴</strong></div>
    <div class="col-3"><%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %></div>
</div>
