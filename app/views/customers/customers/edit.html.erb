 <h2>会員情報編集</h2>
    <%= form_with model:current_customer, url: customers_path do |f| %>
     <table class="table table-borderless">
        <tbody>
          <tr>
           <td><%= f.label :名前 %></td>
           <td>（姓）　<%= f.text_field :name_family %></td>
           <td>（名）　<%= f.text_field :name_first %></td>
         </tr>

          <tr>
            <td><%= f.label :フリガナ %></td>
            <td>（セイ）<%= f.text_field :name_kana_family %></td>
            <td>（メイ）<%= f.text_field :name_kana_first %></td>
          </tr>


          <tr>
            <td><%= f.label :郵便番号 %></td>
            <td>    <%= f.number_field :post_code %></td>
          </tr>

          <tr>
            <td><%= f.label :住所 %></td>
            <td>    <%= f.text_field :address %></td>
          </tr>

          <tr>
            <td><%= f.label :電話番号 %></td>
            <td>    <%= f.number_field :phone_number %></td>
          </tr>

          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td>    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
       </tbody>
      </table>

      <div class="actions">
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= f.submit "退会する", class: 'btn btn-danger' %>
      </div>

    <% end %>


