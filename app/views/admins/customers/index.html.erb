<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @customers.each do |customer| %>
          <tbody>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admins_customer_path(customer.id) do %>
                <%= customer.name_family %>
                <%= customer.name_first %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%# 会員ステータス %></td>
          </tbody>
        <% end %>
        <%= paginate @customers %>
      </table>
    </div>
  </div>
</div>