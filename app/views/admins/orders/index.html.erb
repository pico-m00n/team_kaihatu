<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>注文履歴一覧</h2>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <% @orders.each do |order| %>
          <tbody>
            <td><%= order.created_at %></td>
            <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
            <td><%= order.order_detail.amount %></td>
            <td><%# 注文ステータス表示 %></td>
          </tbody>
        <% end %>
        <%= paginate @orders %>
      </table>
    </div>
  </div>
</div>