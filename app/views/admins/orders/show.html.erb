<div class="container">
  <div class="row mr-3 d-flex">
    <h2 class="mx-5 mt-3 px-4 bg-light shadow">注文履歴詳細</h2>
  </div>
  <div class="col">
    <table class="table table-borderless">
      <tbody>

        <tr>
          <td class="font-weight-bold">購入者</td>
          <td>
            <%#= link_to admins_customer_path(@customer.id) do %>
              <%#= @customer.family_name %> <%#= @customer.first_name %>
            <%# end %>
          </td>
        </tr>

        <tr>
          <td class="font-weight-bold">注文日</td>
          <td><%#= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">配送先</td>
          <td><%#= @order.shipping_adress %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">支払方法</td>
          <td><%# 支払方法表示 %></td>
        </tr>

        <tr>
          <td class="font-weight-bold">注文ステータス</td>
          <%= form_with method: :patch, local: true do |f| %>
            <td><%# 注文ステータス変更 %><%= f.submit "更新", class:"btn btn-success" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    <div class="col">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>

        <%# @order_details.each do |order_detail| %>
          <tbody>
            <td><%#= order_detail.name %></td>
            <td><%# 単価（税込）表示 %></td>
            <td><%#= order.amount %></td>
            <td><%# 小計表示 %></td>
            <%= form_with method: :pacth, local: true do |f| %>
              <td>
                <%# 製作ステータス表示 %>
                <%= f.submit "更新", class:"btn btn-success" %></td>
            <% end %>
          </tbody>
        <%# end %>
      </table>
    </div>

    <div class="col">
      <table class="table table-borderless">
        <tbody>

          <tr>
            <td class="font-weight-bold">商品合計</td>
            <td><%# 合計金額（送料抜き）表示 %></td>
          </tr>

          <tr>
            <td class="font-weight-bold">送料</td>
            <td><%# shipping_cost %></td>
          </tr>

          <tr>
            <td class="font-weight-bold">請求金額合計</td>
            <td><%# total_payment %></td>
          </tr>

        </tbody>
      </table>
      </div>
</div>