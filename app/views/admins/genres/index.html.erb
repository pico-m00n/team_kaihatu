<div class="container m-4">
  <div class="row">
    <h3 class="m-3 bg-light px-4 shadow">ジャンル一覧・追加</h3>
  </div>

  <%= form_with model: @genre, url: admins_genres_path(@genre.id),method: :post, local: true do |f| %>
    <div class="row form-group mt-3">
      <%= f.label :"ジャンル名", class: "col-auto col-form-label" %>
      <div class="col-auto align-self-center"><%= f.text_field :genre_name, autofocus: true, placeholder: "ジャンル名" %></div>
      <div class="col-auto"><%= f.submit "新規登録", class: 'btn btn-success' %></div>
    </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-md-5">
      <table class="table table-hover shadow">

        <thead>
          <tr class="bg-light">
            <th class="pl-4">ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
           <tr>
             <td class='align-middle'><%= genre.genre_name %></td>
             <td class='text-right'><%= link_to "編集する", edit_admins_genre_path(genre.id), class: 'btn btn-success' %></td>
           </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>