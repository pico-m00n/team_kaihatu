
<div class="container">
  <%= form_with model:@shipping_address, url: shipping_addresses_path do |f| %>
    <div class="form-group row">
      <%= f.label :郵便番号, class: "col-1" %>
      <%= f.number_field :shipping_post_code %>
    </div>
    <div class="form-group row">
      <%= f.label :住所, class: "col-1" %>
      <%= f.text_field :shipping_adress, class: "col-8" %>
    </div>
    <div class="form-group row">
      <%= f.label :宛名, class: "col-1" %>
      <%= f.text_field :shipping_name %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>

  <table class="table table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
        <tr>
          <td><%= shipping_address.shipping_post_code %></td>
          <td><%= shipping_address.shipping_adress %></td>
          <td><%= shipping_address.shipping_name %></td>
          <td>
              <%= link_to '編集する', edit_shipping_address_path(shipping_address), class: 'btn btn-sm btn-success' %>
              <%= link_to '削除する', shipping_address_path(shipping_address), method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>