<div class="row">
	<div class="col-2">
	<%= render 'items/sidebar', genres: @genres %>
	</div>


<div class="container">
	<br>
	<div class="col-xs-5">
		<p><%= image_tag @item.image, fallback: "no_image.jpg", size:'380x300' %></p>
	</div>

	<div class="col-xs-5">
		<%= form_with model: @cart_item , url: cart_items_path(item_id: @item), method: :post do |f| %>
		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>
	</div>

	<div class="row">
		<div class="col-xs-5">
			<p class="item-content2">
				¥ <%= ((@item.price*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
				<span>　　</span><%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %>
			</p>
		</div>

			<div class="col-xs-5">
			  <p><%= f.submit "カートに入れる", class:"btn btn-primary" %></p>
			</div>
			<% end %>
	</div>
	</div>
</div>

