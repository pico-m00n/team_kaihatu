<div class="container">
<h1>注文履歴一覧</h1>

<table class="table table-bordered">
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <td><%= order.created_at %></td>
    <td>
      <%= order.shipping_post_code %>
      <%= order.shipping_adress %>
      <%= order.shipping_name %>
    </td>

    <td>
      <% order.order_details.each do |f| %>
       <%= f.itemname %><br>
      <% end %>
    </td>

    
    <td><%= order.total_payment %></td>
    <td><%= order.order_status %></td>
    <td><%= link_to "表示する", order_path(orders), class: "btn btn-primary" %></td>
  <% end %>
  </tbody>
</table>

</div>

