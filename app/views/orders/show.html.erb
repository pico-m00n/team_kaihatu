<div class="container">
  <h3>注文情報</h3>
  <table class="table table-bordered">
    <tr>
      <th>注文日</th>
      <th><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th>
        <%= @order.shipping_post_code %>
        <%= @order.shipping_adress %>
        <%= @order.shipping_name %>
      </th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_method %></th>
    </tr>
    <tr>
      <th>ステータス</th>
      <th>
        <% if @order.order_status == true %>
          <p>販売停止中</p>
        <% else %>
          <p>入金確認</p>
        <% end %>
      </th>
    </tr>
  </table>

  <h3>請求情報</h3>
  <table class="table table-bordered">
    <tr>
      <th>商品合計</th>
      <th>¥<%= (session[:order]["total_payment"] - session[:order]["shipping_cost"]).to_s(:delimited, delimiter: ',') %></th>
    </tr>
    <tr>
      <th>配送料</th>
      <th>¥<%= @order.shipping_cost %></th>
    </tr>
    <tr>
      <th>ご請求額</th>
      <th> ¥<%= (((@order.total_payment).to_i * 1.1).floor).to_s(:delimited, delimiter: ',') %></th>
    </tr>
  </table>

  <h3>注文内容</h3>
  <table class="table table-bordered">
    <thead>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </thead>

    <tbody>
     <% @order_details.each do |order_detail| %>
            <tr>
              <td class="text-left">
                <%= order_detail.item.name %>
              </td>
              <td class="text-right">
                ¥<%= (((order_detail.total_price).to_i * 1.1).floor).to_s(:delimited, delimiter: ',') %>
              </td>
              <td class="text-right">
                  <%= order_detail.amount %>
              </td>
              <td class="text-right">
                ¥<%= (((order_detail.total_price).to_i * 1.1).floor * (order_detail.amount).to_i).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
    </tbody>


  </table>
</div>